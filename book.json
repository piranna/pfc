{
  "gitbook": "2.2.0",
  "language": "es",
  "plugins":
  [
    "anchors",
    "autocover",
    "image-captions",
    "mermaid",
    "printlinks"
  ],
  "pluginsConfig": {
    "autocover": {
      "title": "NodeOS",
      "description": "Sistema operativo ligero para Node.js",
      "author": "Jesús Leganés Combarro 'piranna'",
      "tutor": "Enrique Soriano",
      "academicYear": "2015/2016",
      "font": {
        "family": "Impact",
        "color": "#FFF"
      },
      "background": {
        "color": "#09F"
      },
      "template": "cover.svg"
    },
    "image-captions": {
      "caption": "_CAPTION_"
    }
  },
  "pdf": {
    "fontSize": 16,
    "pageNumbers": true
  }
}
